{
  "name": "guidonciniverdi",
  "scripts": {
    "dev": "tailwindcss --watch --postcss -o style.css -i style/main.pcss",
    "build": "tailwindcss --minify --postcss -o style.css -i style/main.pcss",
    "start-sync-server": "browser-sync start --files 'style.css,templates/*.html,parts/*.html' --no-notify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "browser-sync": "^2.29.3",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "tailwindcss": "^3.3.5"
  }
}
